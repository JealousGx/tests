{
  "compilerOptions": {
    "lib": ["ESNext"],
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,
    "sourceMap": true,
    "target": "ES2017",
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*",
    ".esbuild/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
